# 启用Gzip压缩
<IfModule mod_deflate.c>
  # 为不同类型的文件启用压缩
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml image/svg+xml

  # 低版本浏览器的兼容性
  BrowserMatch ^Mozilla/4 gzip-only-text/html
  BrowserMatch ^Mozilla/4\.0[678] no-gzip
  BrowserMatch \bMSIE !no-gzip !gzip-only-text/html

  # 不要压缩已经压缩过的内容
  SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|zip|gz|bz2|rar)$ no-gzip dont-vary

  # 确保代理服务器能够正确地传递压缩内容
  <IfModule mod_headers.c>
    Header append Vary User-Agent env=!dont-vary
  </IfModule>
</IfModule>

# 设置缓存控制
<IfModule mod_expires.c>
  ExpiresActive On
  
  # 设置默认缓存期限
  ExpiresDefault "access plus 1 month"
  
  # HTML文档短期缓存
  ExpiresByType text/html "access plus 1 day"
  
  # CSS和JavaScript长期缓存，依靠文件名或查询参数的变更来使缓存失效
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  
  # 图片长期缓存
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  
  # Web字体长期缓存
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  
  # 对于PWA相关文件设置短期缓存，以便及时更新
  ExpiresByType application/manifest+json "access plus 1 week"
</IfModule>

# 添加安全头
<IfModule mod_headers.c>
  # HSTS (HTTP Strict Transport Security)
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
  
  # X-Content-Type-Options
  Header always set X-Content-Type-Options "nosniff"
  
  # X-Frame-Options
  Header always set X-Frame-Options "SAMEORIGIN"
  
  # X-XSS-Protection
  Header always set X-XSS-Protection "1; mode=block"
  
  # Referrer-Policy
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Content-Security-Policy
  Header always set Content-Security-Policy "default-src 'self'; script-src 'self' https://cdn.jsdelivr.net https://cdn.tailwindcss.com 'unsafe-inline'; style-src 'self' https://cdn.jsdelivr.net https://cdn.tailwindcss.com 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self';"
</IfModule>

# 启用Keep-Alive
<IfModule mod_headers.c>
  Header set Connection keep-alive
</IfModule>

# 重定向所有HTTP请求到HTTPS
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{HTTPS} off
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# 对PWA路由的处理
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # 如果请求不是文件或目录，则重定向到index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule> 